%div.center
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field.mb-2
      = f.label :username
      %br
      = f.text_field :username, autofocus: true, autocomplete: "email", class: "form-control", required: true

    .field.mb-2
      = f.label :email
      %br
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true

    .field.mb-2
      = f.label :password
      %br
      = f.password_field :password, autocomplete: "new-password", class: "form-control", required: true

    .field.mb-4
      = f.label :password_confirmation
      %br
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true

    .actions
      = f.submit "Sign up", class: 'btn btn-dark col-12 mb-2'
      = render 'devise/shared/oauth'
      = render "devise/shared/links"
